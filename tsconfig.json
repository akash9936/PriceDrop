{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*",
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./src/*"
    ]
}